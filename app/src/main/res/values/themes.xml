<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TouchNotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- CUSTOM NO ACTION BAR THEME   -->
    <style name="TouchThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <!--  NOTE TITLE LIST STYLING  -->
    <style name="Theme.TouchNotes.Title">
        <item name="fontFamily">Roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColors</item>
    </style>

    <!-- NOTE BODY STYLING   -->
    <style name="Theme.TouchNotes.Body">
        <item name="fontFamily">Segoe UI</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColors</item>
    </style>

    <!--  Note title  -->
    <style name="Theme.TouchNotes.EditTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">35sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/textHintColor</item>
    </style>

    <!-- Note Content -->
    <style name="Theme.TouchNotes.EditBody">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ThemeOverlay.TouchNotes.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_600</item>
        <item name="appWidgetTextColor">@color/light_blue_50</item>
    </style>
</resources>